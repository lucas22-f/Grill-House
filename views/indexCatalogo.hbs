<body class="fondo-2 ">
    <div class="container table-responsive">
        <table class="table table-dark table-striped mt-5">
            <thead>

                <tr> {{!-- mostramos la tabla de productos conectada a la base d edatos  --}}
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>

                {{#each productos}}  
                <tr>
                    <td> {{nombre}} </td>
                    <td> {{descripcion}} </td>
                    <td>${{precio}} </td>
                    <td> <img src="{{urlImagen}}" alt=""> </td>
                </tr>

                 {{/each}} 

            </tbody>
        </table>
    </div>

</body>