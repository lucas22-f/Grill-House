<body class="fondo-3">
    

<div class="container shadow mt-5 p-3 bg-mio">
    <form action="/crud/agregarP" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre">
        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <input type="text" class="form-control" name="descripcion" id="descripcion">

        </div>
        <div class="form-group">
            <label for="imagenFile">Imagen</label>
            <input type="file" class="form-control" name="imagenFile" id="imagenFile">
        </div>
    
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" name="precio" id="precio">

            <button type="submit" class="btn btn-primary mt-3">Confirmar</button>
            <a href="/crud"><input type="button" value="Cancelar" class="btn btn-danger mt-3"></a>
    </form>

</div>

